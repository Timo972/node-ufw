{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "alwaysStrict": true,
    "baseUrl": "./",
    "checkJs": true,
    "declaration": true,
    "declarationDir": "./types",
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "noImplicitAny": true,
    "rootDir": "./src",
    "target": "ESNEXT",
    "module": "ESNEXT"
  },
  "include": ["src/*"],
  "exclude": ["rollup.config.js", "tests/*", "dist/*", "node_modules"]
}
